{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node", "@playwright/test"],
    "typeRoots": ["./frontend/node_modules/@types", "./frontend/node_modules"],
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true
  },
  "include": ["playwright.config.ts"],
  "exclude": ["node_modules", "frontend", "backend"]
}

